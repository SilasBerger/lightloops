{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "target": "ES2022",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types/",
      "./src/@types/"
    ],
    "types": [
      "node",
      "express"
    ]  
  }
}